<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sap.jam.mobile_sdk" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".JamSDKDemoApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.JamMainTabbedActivity"
            android:label="@string/title_activity_jam_welcome" >
        </activity>
        <activity
            android:name=".views.JamGroupsListRename"
            android:label="@string/title_activity_jam_groups_list" >
        </activity>
        <activity
            android:name=".views.JamFeedWidgetFragment"
            android:label="@string/title_activity_jam_feed_widget" >
        </activity>
    </application>

</manifest>
